<!DOCTYPE html>
<html>
  <head>
    <title>VideoShare</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= stylesheet_link_tag    '//vjs.zencdn.net/5.0.2/video-js.css' %>
    <%= javascript_include_tag '//cdn.pubnub.com/pubnub-dev.js' %>
    <%= csrf_meta_tags %>
  </head>

  <body data-no-turbolink="true">
    <% if current_user %>
      <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <%= link_to 'VideoShare', root_url, class: 'navbar-brand' %>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to 'Browse videos', videos_path %>
            </li>
            <li>
              <%= link_to 'Upload video', new_video_path %>
            </li>
	           <li class="dropdown">
             <% if user_signed_in? %>
               <%= link_to 'Log out', destroy_user_session_path, :method => :get %>
             <% else %>
               <%= link_to 'Login', new_user_session_path %>
            <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% end %>
    <% if notice %>
<p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <%= yield %>
  </body>
</html>
